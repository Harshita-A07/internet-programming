<!DOCTYPE html>
<html>
<head>
    
</head>
<body>

<h2>Temperature Converter</h2>

<form method="post" action="">
    Temperature: <input type="text" name="temperature" required><br>
    Unit: 
    <select name="unit" required>
        <option value="celsius">Celsius</option>
        <option value="fahrenheit">Fahrenheit</option>
    </select><br>
    <input type="submit" name="submit" value="Convert">
</form>

<?php
if(isset($_POST['submit'])){
    $temperature = $_POST['temperature'];
    $unit = $_POST['unit'];

    if($unit == 'celsius'){
        $converted_temp = ($temperature * 9/5) + 32;
        echo "$temperature degrees Celsius is equal to $converted_temp degrees Fahrenheit.";
    }
    elseif($unit == 'fahrenheit'){
        $converted_temp = ($temperature - 32) * 5/9;
        echo "$temperature degrees Fahrenheit is equal to $converted_temp degrees Celsius.";
    }
}
?>

</body>
</html>
